@* definindo a classe de modelo de dados utilizada nesta página*@
@model EstoqueWeb.Presentation.Models.ProdutoCadastroViewModel

<h5>Cadastro de Produtos</h5>
<p>
    Preencha os campos para adicionar um produto em seu estoque.
</p>
<hr/> 

@*declarando o formulário*@
@using(Html.BeginForm())
{

    <div class="row mb-3">
        <div class="col-md-6">
            <label>Nome do produto:</label>
            @Html.TextBoxFor(model => model.Nome,
                new { @class = "form-control" })
            <span class ="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-3">
            <label>Data de validade:</label>
            @Html.TextBoxFor(model => model.DataValidade,
                new { @type = "date", @class = "form-control" })
            <span class ="text-danger">
                @Html.ValidationMessageFor(model => model.DataValidade)
            </span>
        </div>
        <div class="col-md-2">
            <label>Preço do produto:</label>
        <div class="input-group">
            <div class="input-group-prepend">
        <span class="input-group-text">R$</span>
            </div>
            @Html.TextBoxFor(model => model.Preco,
                new { @placeholder="0,00", @class="form-control" }) 
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Preco)
            </span>
        </div>
        <br/>
        </div>
        <div class="col-md-2">
            <label>Quantidade do produto:</label>
            @Html.TextBoxFor(model => model.Quantidade,
               new { @placeholder = "0", @class = "form-control"})
            <span class="text-danger">
               @Html.ValidationMessageFor(model => model.Preco)
            </span>
        </div>

    </div>

    <div class="row mb-3">
        <div class="col-md-5">
            <label>Descrição do produto:</label>
            @Html.TextAreaFor(model => model.Descricao,
                new { @class = "form-control" })
            <span class = "text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <input type="submit" value="Realizar Cadastro" class="btn btn-success"/>
        </div>
    </div>

    <h5>
        @TempData["Mensagem"]
    </h5>
}