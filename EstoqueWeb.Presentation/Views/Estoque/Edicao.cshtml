@model EstoqueWeb.Presentation.Models.ProdutoEdicaoViewModel 

<h5>Edição de Produtos</h5>
<p>
    Utilize os campos para editar um produto do seu estoque.
</p>
<hr/> 

@using(Html.BeginForm())
{
    <!--- campo oculto -->
    @Html.HiddenFor(model => model.Id)
    
    <div class="row mb-3">
        <div class="col-md-6">
            <label>Nome do produto:</label>
            @Html.TextBoxFor(model => model.Nome,
                new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-3">
            <label>Data de validade:</label>
            @Html.TextBoxFor(model => model.DataValidade,
                new { @type = "date", @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataValidade)
            </span>
        </div>
        <div class="col-md-2">
            <label>Preço do produto:</label>
        <div class="input-group">
            <div class="input-group-prepend">
        <span class="input-group-text">R$</span>
            </div>
            @Html.TextBoxFor(model => model.Preco,
                new { @placeholder="0,00", @class="form-control" }) 
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Preco)
            </span>
        </div>
        <br/>
        </div>
        <div class="col-md-2">
            <label>Quantidade do produto:</label>
            @Html.TextBoxFor(model => model.Quantidade,
               new { @class = "form-control"})
            <span class="text-danger">
               @Html.ValidationMessageFor(model => model.Preco)
            </span>
        </div>

    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label>Descrição do produto:</label>
            @Html.TextAreaFor(model => model.Descricao,
               new { @class = "form-control" })
            <span class="text-danger">
               @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
        <div class="col-md-3">
            <label>Status do produto:</label>
            <br/>
            @Html.RadioButtonFor(model => model.Ativo, "1") <label>Ativo</label> <br/>
            @Html.RadioButtonFor(model => model.Ativo, "0") <label>Inativo</label> <br/>
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Ativo)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <input type="submit" value="Salvar Alterações" class="btn btn-primary"/>
            <a href="/Estoque/Consulta" class="btn btn-secondary">Cancelar</a>
        </div>
    </div> 
}